# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.{js,py,rb}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml, yaml}]
indent_style = space
indent_size = 2

# rust files
[*.rs]
indent_style = space
indent_size = 4
